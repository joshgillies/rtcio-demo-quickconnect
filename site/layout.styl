@import 'nib'

remote_size = 80%;

html, body {
  width: 100%;
  height: 100%;
  margin: 0;
}

body {
  background: radial-gradient(#555a5f 0%, #1c1e20 100%);
  background-position: fixed;
  background-size: cover;
}

.container {
  margin-top: 10%;
	width: 100%;
	height: 100%;

	display: flex;
	flex-direction: column;
}

.remote {
  z-index: 2;
	display: flex;
	flex-direction: row;
	justify-content: space-between;

	video {
		flex: 1 1 100%;
		width: 100%;
		max-height: 90%;
	}
}

.devices {
  position: absolute;
  margin-top: 10%;
  width: 100%;
  text-align: center;
  top: 0;
  z-index: 2;


  select {
    display: block;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin: 0 auto;
  }
}
.local {
  position: fixed;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  z-index: 1;
  text-align: center;

  video {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    min-width: 50%;
    min-height: 50%;
  }
}

.layout {
  margin-top: 10%;
	display: flex;
	flex-direction: column;
	flex: 4 4 100%;
	height: 100%;
	width: 100%;
}

.layout-hz {
	flex-direction: row;
}
