@import 'nib'

remote_size = 80%;

html, body {
  width: 100%;
  height: 100%;
  margin: 0;
}

.container {
  margin-top: 10%;
	width: 100%;
	height: 100%;

	display: flex;
	flex-direction: column;
}

.remote {
  z-index: 2;
	display: flex;
	flex-direction: row;
	justify-content: space-between;

	video {
		flex: 1 1 100%;
		width: 100%;
		max-height: 90%;
	}
}

.devices {
  position: absolute;
  bottom: 0;
  z-index: 2;
}

.local {
  position: fixed;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  z-index: 1;
  text-align: center;

  video {
    filter: blur(20px);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    min-width: 50%;
    min-height: 50%;
  }
}

.layout {
  margin-top: 10%;
	display: flex;
	flex-direction: column;
	flex: 4 4 100%;
	height: 100%;
	width: 100%;
}

.layout-hz {
	flex-direction: row;
}
